<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="callbacks"
      type="au.com.codeka.podcreep.app.podcasts.details.DetailsLayout.Callbacks" />
    <variable
      name="episode"
      type="au.com.codeka.podcreep.model.Episode" />
    <variable
      name="podcast"
      type="au.com.codeka.podcreep.model.Podcast" />
  </data>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <View
      android:id="@+id/logo"
      android:layout_width="64dp"
      android:layout_height="64dp" />

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/logo"
      android:layout_toStartOf="@+id/play"
      android:layout_alignTop="@+id/play"
      android:layout_alignBottom="@+id/play"
      android:gravity="center_vertical"
      android:text="@{episode.title}"
      tools:text="Episode title" />

    <ImageView
      android:id="@+id/play"
      android:contentDescription="@string/play"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_alignParentEnd="true"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:src="@drawable/ic_play_arrow_black_24dp"
      android:scaleType="center"
      android:onClick="@{() -> callbacks.onEpisodePlay(podcast, episode)}" />
  </RelativeLayout>
</layout>
