<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="metadata"
      type="android.support.v4.media.MediaMetadataCompat" />
    <variable
      name="albumArtUri"
      type="String" />
    <variable
      name="callbacks"
      type="au.com.codeka.podcreep.app.podcasts.nowplaying.NowPlayingCallbacks" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:gravity="bottom"
      android:textStyle="bold"
      android:background="@color/colorPrimary"
      android:text="@{metadata.description.title}"
      android:textColor="@color/design_default_color_on_primary"
      android:maxLines="1"
      android:ellipsize="end"
      tools:text="Podcast title" />

    <TextView
      android:id="@+id/subtitle"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:gravity="top"
      android:maxLines="1"
      android:ellipsize="end"
      android:background="@color/colorPrimary"
      android:text="@{metadata.description.subtitle}"
      android:textColor="@color/design_default_color_on_primary"
      tools:text="Episode title" />

  </LinearLayout>
</layout>

