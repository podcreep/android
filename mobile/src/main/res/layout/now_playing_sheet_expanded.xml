<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="metadata"
      type="android.support.v4.media.MediaMetadataCompat" />
    <variable
      name="albumArtUri"
      type="String" />
    <variable
      name="callbacks"
      type="au.com.codeka.podcreep.app.podcasts.nowplaying.NowPlayingCallbacks" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:gravity="bottom"
      android:textStyle="bold"
      android:background="@color/colorPrimary"
      android:text="@{metadata.description.title}"
      android:textColor="@color/design_default_color_on_primary"
      android:maxLines="1"
      android:ellipsize="end"
      tools:text="Podcast title" />

    <TextView
      android:id="@+id/subtitle"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:gravity="top"
      android:maxLines="1"
      android:ellipsize="end"
      android:background="@color/colorPrimary"
      android:text="@{metadata.description.subtitle}"
      android:textColor="@color/design_default_color_on_primary"
      tools:text="Episode title" />

    <ImageView
      android:id="@+id/podcast_logo"
      android:transitionName="logo"
      android:contentDescription="@string/contentdesc_podcast_logo"
      android:layout_width="match_parent"
      android:layout_height="256dp"
      app:imageUrl="@{albumArtUri}"
      tools:src="@drawable/podcreep" />

    <TextView
      android:id="@+id/title_extra"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="top"
      android:background="@color/design_default_color_background"
      android:text="@{metadata.description.description}"
      android:layout_margin="16dp"
      tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras pretium consequat aliquet. Aliquam scelerisque lectus a turpis varius feugiat. Phasellus hendrerit nulla a auctor euismod. Quisque nisi sem, feugiat sed pellentesque ornare, lobortis ac lectus. Nunc commodo ipsum eget ligula porttitor, sed ullamcorper velit porta. Donec lacinia eros eget mattis lacinia. Vivamus fermentum efficitur augue, sed porta magna tempor ac." />

    <au.com.codeka.podcreep.app.views.PlayPauseButton
      android:id="@+id/play_pause"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:scaleType="center"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:onClick="@{() -> callbacks.onPlayPauseClick()}" />

  </LinearLayout>
</layout>

